{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "API",
    "description": "API Documentation Sample"
  },
  "host": "localhost:3006",
  "basePath": "/",
  "schemes": [
    "http",
    "https"
  ],
  "securityDefinitions": {
    "bearerAuth": {
      "type": "apiKey",
      "in": "header",
      "name": "Authorization",
      "description": "請加上 Bearer \"Token\" 以取得授權"
    }
  },
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/api/users/profile": {
      "get": {
        "tags": [
          "User"
        ],
        "description": "取得個人資料",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "個人資料",
            "schema": {
              "type": "object",
              "properties": {
                "data": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "_id": {
                        "type": "string",
                        "example": "xxxxxxxxxxxxxxxx"
                      },
                      "name": {
                        "type": "string",
                        "example": "XXX"
                      },
                      "nickname": {
                        "type": "string",
                        "example": "nickname"
                      },
                      "email": {
                        "type": "string",
                        "example": ""
                      },
                      "photo": {
                        "type": "string",
                        "example": "https://thispersondoesnotexist.com/"
                      },
                      "gender": {
                        "type": "string",
                        "example": "male"
                      },
                      "phone": {
                        "type": "string",
                        "example": "09xxxxxxxx"
                      }
                    }
                  }
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      },
      "patch": {
        "tags": [
          "User"
        ],
        "description": "修改個人資料",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "patch",
            "in": "body",
            "description": "修改個人資料",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "name"
                },
                "nickname": {
                  "type": "string",
                  "example": "nickname"
                },
                "gender": {
                  "type": "string",
                  "example": "male"
                },
                "phone": {
                  "type": "string",
                  "example": "09xxxxxxxx"
                },
                "photo": {
                  "type": "string",
                  "example": "https://thispersondoesnotexist.com/"
                }
              },
              "required": [
                "name",
                "nickname",
                "gender",
                "phone",
                "photo"
              ]
            }
          }
        ],
        "responses": {
          "default": {
            "description": ""
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/api/users/sign_up": {
      "post": {
        "tags": [
          "User"
        ],
        "description": "註冊功能",
        "parameters": [
          {
            "name": "post",
            "in": "body",
            "description": "註冊資料",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "name"
                },
                "nickname": {
                  "type": "string",
                  "example": "nickname"
                },
                "email": {
                  "type": "string",
                  "example": "email"
                },
                "gender": {
                  "type": "string",
                  "example": "male"
                },
                "password": {
                  "type": "string",
                  "example": "password"
                },
                "confirmPassword": {
                  "type": "string",
                  "example": "password"
                }
              },
              "required": [
                "name",
                "nickname",
                "email",
                "gender",
                "password",
                "confirmPassword"
              ]
            }
          }
        ],
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/api/users/sign_in": {
      "post": {
        "tags": [
          "User"
        ],
        "description": "登入功能",
        "parameters": [
          {
            "name": "post",
            "in": "body",
            "description": "登入資料",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "email"
                },
                "password": {
                  "type": "string",
                  "example": "password"
                }
              },
              "required": [
                "email",
                "password"
              ]
            }
          }
        ],
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/api/users/updatePassword": {
      "patch": {
        "tags": [
          "User"
        ],
        "description": "修改密碼功能",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "patch",
            "in": "body",
            "description": "修改密碼",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "password": {
                  "type": "string",
                  "example": "password"
                },
                "confirmPassword": {
                  "type": "string",
                  "example": "confirmPassword "
                }
              },
              "required": [
                "password",
                "confirmPassword"
              ]
            }
          }
        ],
        "responses": {
          "default": {
            "description": ""
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/api/posts/": {
      "get": {
        "tags": [
          "Post"
        ],
        "description": "取得所有 Posts 文章",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "timeSort",
            "in": "query",
            "description": "排序 asc, desc",
            "required": false,
            "type": "string"
          },
          {
            "name": "content",
            "in": "query",
            "description": "搜尋內容",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "取得所有文章",
            "schema": {
              "type": "object",
              "properties": {
                "data": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "_id": {
                        "type": "string",
                        "example": "xxxxxxxxxxxxxx"
                      },
                      "user": {
                        "type": "string",
                        "example": "xxxxxxxxxxxxxx"
                      },
                      "title": {
                        "type": "string",
                        "example": "title"
                      },
                      "content": {
                        "type": "string",
                        "example": "content"
                      },
                      "tag": {
                        "type": "array",
                        "example": [
                          "教學"
                        ],
                        "items": {
                          "type": "string"
                        }
                      },
                      "image": {
                        "type": "string",
                        "example": "https://placehold.co/600x400"
                      },
                      "likes": {
                        "type": "number",
                        "example": 0
                      },
                      "comments": {
                        "type": "number",
                        "example": 0
                      },
                      "isPublic": {
                        "type": "boolean",
                        "example": true
                      },
                      "createdAt": {
                        "type": "string",
                        "example": "2024-01-17T03:59:21.350Z"
                      },
                      "updatedAt": {
                        "type": "string",
                        "example": "2024-01-26T16:18:33.032Z"
                      }
                    }
                  }
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Post"
        ],
        "description": "新增 Post 文章",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "post",
            "in": "body",
            "description": "新增文章",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string",
                  "example": "title"
                },
                "content": {
                  "type": "string",
                  "example": "content"
                },
                "tag": {
                  "type": "array",
                  "example": [
                    "教學"
                  ],
                  "items": {
                    "type": "string"
                  }
                },
                "image": {
                  "type": "string",
                  "example": "https://placehold.co/600x400"
                },
                "isPublic": {
                  "type": "boolean",
                  "example": true
                }
              },
              "required": [
                "title",
                "content",
                "tag"
              ]
            }
          }
        ],
        "responses": {
          "default": {
            "description": ""
          }
        },
        "security": [
          {
            "JWT": []
          }
        ]
      }
    },
    "/api/posts/{id}": {
      "patch": {
        "tags": [
          "Post"
        ],
        "description": "修改 Post 文章",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "patch",
            "in": "body",
            "description": "修改文章",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string",
                  "example": "title"
                },
                "content": {
                  "type": "string",
                  "example": "content"
                }
              },
              "required": [
                "title",
                "content"
              ]
            }
          }
        ],
        "responses": {
          "default": {
            "description": ""
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      },
      "delete": {
        "tags": [
          "Post"
        ],
        "description": "刪除 Post 文章",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "default": {
            "description": ""
          }
        },
        "security": [
          {
            "JWT": []
          }
        ]
      }
    },
    "/api/uploads/image": {
      "post": {
        "tags": [
          "Upload"
        ],
        "description": "上傳圖片(限制 1MB 以下)",
        "consumes": [
          "multipart/form-data"
        ],
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "file",
            "in": "formData",
            "type": "file",
            "required": true,
            "description": "File data"
          }
        ],
        "responses": {
          "200": {
            "description": "路徑",
            "schema": {
              "type": "object",
              "properties": {
                "data": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "url": {
                        "type": "string",
                        "example": "xxxxxxxxxxxxxxxx"
                      }
                    }
                  }
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    }
  }
}